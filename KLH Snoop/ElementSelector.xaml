<Window x:Class="ElementSelector"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Element Selector" SizeToContent="WidthAndHeight" Width="340" ResizeMode="NoResize">
    <StackPanel Height="35" Orientation="Horizontal">
            <TextBox Margin="5" Width="230" ToolTip="Element Id" Text="{Binding InputString}" PreviewTextInput="TextBox_PreviewTextInput"/>
            <Button Padding="5" IsCancel="True" Margin="5">Cancel</Button>
            <Button Padding="5" Margin="5" Click="AddElements">OK</Button>
        </StackPanel>
</Window>
